            }
        }
    </style>
    
    <script>
        // Header scroll behavior
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.prestige-header-new');
            if (header) {
                if (window.scrollY > 100) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            }
        });
    </script>
</body>
</html>